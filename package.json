{
  "name": "es-ts",
  "version": "0.0.1",
  "description": "A TypeScript Express API Template with Prisma, Zod, and OpenAPI integration for robust backend development.",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "node --watch --env-file .env --import=tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --env-file .env dist/src/index.js"
  },
  "keywords": [
    "typescript",
    "express",
    "prisma",
    "zod",
    "openapi",
    "api",
    "backend",
    "swagger",
    "rest"
  ],
  "author": "enjoy",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@prisma/adapter-pg": "^6.16.2",
    "@prisma/client": "6.11.1",
    "@scalar/express-api-reference": "^0.8.18",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "pino": "^9.9.5",
    "zod": "4.1.9",
    "zod-openapi": "^5.4.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.5",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "prisma": {
    "schema": "./prisma"
  }
}
